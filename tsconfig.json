{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "rootDir": "src/",
    "outDir": "out/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "moduleResolution": "node"
  },
  "include": ["src", "**/*.ts", "**/*.cjs", "**/*.mjs", ".prettierrc.mjs", "eslint.config.mjs"]
}
